[user]
    name = sudoflux
    email = jfletcherj86@gmail.com

[init]
    defaultBranch = main

[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore_global
    pager = less -FRSX

[color]
    ui = auto

[color "branch"]
    current = yellow bold
    local = green bold
    remote = red bold

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[diff]
    tool = vimdiff
    renames = copies
    mnemonicprefix = true
    compactionHeuristic = true

[alias]
    # Basic shortcuts
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    ls = ls-files
    aa = add --all
    
    # Commit
    amend = commit --amend
    cm = commit -m
    cma = commit -a -m

    # Log
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    last = log -1 HEAD
    
    # Branch
    ba = branch -a
    bd = branch -d
    bD = branch -D
    
    # Reset
    unstage = reset HEAD --
    undo = reset --soft HEAD^
    
    # Stash
    sl = stash list
    ss = stash save
    sp = stash pop
    
    # Pull/Push
    pl = pull
    ps = push
    pf = push --force-with-lease
    
    # Show what you've done today
    today = log --since=midnight --author='sudoflux' --oneline
    
    # Find files
    f = "!git ls-files | grep -i"
    
    # Show the state of your work tree
    work = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short --branches --not --remotes
    
    # Show all your aliases
    aliases = config --get-regexp alias

[pull]
    rebase = false

[push]
    default = simple
    followTags = true

[fetch]
    prune = true

[help]
    autocorrect = 1

[rerere]
    enabled = true
    autoupdate = true
